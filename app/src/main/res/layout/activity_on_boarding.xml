<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardingActivity"
    >
    <RelativeLayout
        android:id="@+id/rlBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/on_boarding_stroke"
            android:fontFamily="casual"
            android:padding="5dp"
            android:text="JÃ˜bsFinder"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Skip"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textFontWeight="400"/>
    </RelativeLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rlFooter"
        android:layout_below="@+id/rlBrand" />

    <RelativeLayout
        android:id="@+id/rlFooter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_on_boarding"
            android:text="Next"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:fontFamily="sans-serif-light"/>
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circle_indicator"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/btnNext"
            android:layout_centerHorizontal="true"
            app:ci_drawable="@drawable/bg_circle_grey"
            android:layout_marginTop="10dp"
            app:ci_height="8dp"
            app:ci_width="8dp" />
    </RelativeLayout>

</RelativeLayout>